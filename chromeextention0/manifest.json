{
    "manifest_version": 3,
    "name": "Slang translator",
    "version": "1.0",
    "description": "Translate text from any website to slang using Google Palm 2 and have it read out loud using Google Text to Speech.",
    "permissions": ["contextMenus", "activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  